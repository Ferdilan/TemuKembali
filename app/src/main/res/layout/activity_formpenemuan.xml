<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".formpenemuan">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input Data Penemuan" />

    <EditText
        android:id="@+id/editnamaBarangDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Nama Barang" />

    <EditText
        android:id="@+id/editDeskripsiDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Deskripsi" />

    <EditText
        android:id="@+id/editLokasiDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Lokasi" />

    <EditText
        android:id="@+id/editTanggalDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tanggal Penemuan"
        android:inputType="date" />

    <EditText
        android:id="@+id/editKontakDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Kontak yang dapat dihubungi" />

    <Spinner
        android:id="@+id/statusDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/status"/>

    <Button
        android:id="@+id/addDitemukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addDitemukan"
        android:text="Submit" />

</LinearLayout>